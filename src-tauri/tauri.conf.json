{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "echo-daily",
  "version": "0.1.0",
  "identifier": "app.doyoudo.echo-daily",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Echo Daily",
        "width": 900,
        "height": 880,
        "minWidth": 800,
        "minHeight": 750,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  }
}
